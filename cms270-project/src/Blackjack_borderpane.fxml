<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

 
<BorderPane fx:controller="BlackjackController" 
	xmlns:fx="http://javafx.com/fxml/1">

    <top>
    	<HBox alignment="center" spacing="10">
    	<Label fx:id="topLabel" text="TOP pane" />
    	
    	</HBox>
        
    </top>
    <left>
        <Label text="LEFT pane"/>
    </left>
    <center>
    </center>
    <right>
    </right>
    <bottom>
       <HBox alignment="center"/>
        <TextField fx:id="textInput" text="CENTER"/>
         <Button fx:id="leftButton"  text="Hit"
            onAction="#hit" />
         <Button fx:id="rightButton" text="Stand"
         	onAction="#stand" />
       </HBox>
       
    </bottom>
 
</BorderPane>